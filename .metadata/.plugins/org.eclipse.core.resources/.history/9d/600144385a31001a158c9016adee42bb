package fr.mds.model;

import java.util.ArrayList;
import java.util.List;

public class Meal {
	private List<Item> mealItems = new ArrayList<Item>();
	
	public void addItem(Item item) {
		this.mealItems.add(item);
	}
	
	public float getCoast() {
		int finalPrice = 0;
		for (Item item : this.mealItems) {
			finalPrice += item.price();
		}
		
		return finalPrice;
	}
	
	public void showItems() {
		int index = 0;
		for (Item item : this.mealItems) {
			System.out.println("Item n°"+ index++ + ": "+ item.name());
		}
	}
	
	public static class MealBuilder {
		private List<Item> mealBuilderItems = new ArrayList<Item>();
		
		public MealBuilder addItem(Item item) {
			mealBuilderItems.add(item)
			return this;
		}
		
		public MealBuilder prepareVegMeal(){
			return new MealBuilder().addItem(new VegBurger()).addItem(new Pepsi());
        }
		
		public MealBuilder prepareNonVegMeal(){
			return new MealBuilder().addItem(new ChickenBurger()).addItem(new Pepsi());
        }
		
		public Meal build() {
			final Meal meal = new Meal();
			return meal;
		}
	}
	
	public Meal() {
		// TODO Auto-generated constructor stub
	}
	
	public Meal(List<Item> items) {
		this.items = items;
	}
}
